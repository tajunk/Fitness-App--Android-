<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#24252a">

    <ImageView
        android:id="@+id/speech_bubble"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="-40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/graphicnew"></ImageView>
    <Button
        android:id="@+id/button_timer_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-20dp"
        android:background="@drawable/button_style"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="PROCEED"
        android:textColor="#fff"
        android:fontFamily="@font/traffolight"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P R O F I L E S"
        android:fontFamily="@font/traffolight"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="             SELECT          "
                android:textColor="#fff"
                android:fontFamily="@font/traffolight"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/profile_list"
                android:layout_width="120dp"
                android:layout_height="30sp"
                android:textAlignment="center"
                android:background="#555555"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="DISPLAY NAME          "
                android:textColor="#fff"
                android:fontFamily="@font/traffolight"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/display_name_entry"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:textColor="#fff">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="WEIGHT IN POUNDS  "
                android:textColor="#fff"
                android:fontFamily="@font/traffolight"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/weight_measurement_entry"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:textColor="#fff">
            </EditText>
        </LinearLayout>
        <Button
            android:id="@+id/button_settings_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:layout_marginTop="5dp"
            android:text="CREATE"
            android:onClick="saveButton"
            android:textColor="#fff"
            android:fontFamily="@font/traffolight"
            android:textSize="15sp" />
    </LinearLayout>



    <TextView
        android:id="@+id/user_weight_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:visibility="invisible"/>


</LinearLayout>